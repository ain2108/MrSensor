<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sigaev.mrsensor.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/zTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/z_title"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/yTitleView"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/zView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="19dp"
        android:text="@string/display_z"
        app:layout_constraintLeft_toRightOf="@+id/zTitleView"
        app:layout_constraintTop_toBottomOf="@+id/yView" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="226dp"
        android:layout_marginTop="29dp"
        android:onClick="startService"
        android:text="@string/start_light_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_light"
        app:layout_constraintLeft_toRightOf="@+id/titleLight"
        android:layout_marginLeft="69dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp" />

    <TextView
        android:id="@+id/titleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/light_title"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp" />

    <TextView
        android:id="@+id/titleProx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prox_title"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleLight" />

    <TextView
        android:id="@+id/proxView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_prox"
        app:layout_constraintLeft_toRightOf="@+id/titleProx"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lightView" />

    <TextView
        android:id="@+id/yTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y_title"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/xTitleView"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_title"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/titleProx"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_x"
        app:layout_constraintLeft_toRightOf="@+id/xTitleView"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/proxView" />

    <TextView
        android:id="@+id/yView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_y"
        app:layout_constraintLeft_toRightOf="@+id/yTitleView"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/xView" />

    <TextView
        android:id="@+id/latView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="19dp"
        android:text="@string/display_lat"
        app:layout_constraintLeft_toRightOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/longView" />

    <TextView
        android:id="@+id/longView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="18dp"
        android:text="@string/display_long"
        app:layout_constraintLeft_toRightOf="@+id/titleLat"
        app:layout_constraintTop_toBottomOf="@+id/zView" />

    <TextView
        android:id="@+id/titleLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="19dp"
        android:text="@string/title_long"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zTitleView" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="18dp"
        android:text="@string/title_lat"
        app:layout_constraintLeft_toLeftOf="@+id/titleLat"
        app:layout_constraintTop_toBottomOf="@+id/titleLat" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="29dp"
        android:onClick="stopService"
        android:text="@string/stop_service_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
